datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String
}

model Teacher {
  id       Int      @id @default(autoincrement())
  name     String
  subjects Subject[] @relation("TeacherSubjects")
}

model Pupil {
  id       Int      @id @default(autoincrement())
  name     String
  grade    Int
  subjects Subject[] @relation("PupilSubjects")
}

model Subject {
  id         Int        @id @default(autoincrement())
  name       String
  teacherId  Int?
  teacher    Teacher?   @relation("TeacherSubjects", fields: [teacherId], references: [id],  onDelete: Cascade)
  pupils     Pupil[]    @relation("PupilSubjects")
}

